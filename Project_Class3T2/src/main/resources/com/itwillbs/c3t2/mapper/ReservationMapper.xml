<mapper namespace="com.itwillbs.c3t2.mapper.ReservationMapper">
  	
	<select id="available" resultType="com.itwillbs.c3t2.vo.ReservationVO">
		SELECT #{time} FROM SCHEDULE WHERE date = #{date}
	</select>
	

<!-- 	</select> 서브쿼리 or 체크박스 세션아이디 불러오기 --> 
	
	<insert id="insertReservation">
		INSERT INTO RESERVATION
		VALUES (
			null
			, #{date}
			, #{time}
			, #{reservation_person_name}
			, #{reservation_person_count}
			, #{reservation_person_phone}
			, 0
			, #{ismember}
			, #{dinning_num}
			, #{restaurant_num}
		)
	</insert>
	
	<select id="selectReservation" resultType="com.itwillbs.c3t2.vo.ReservationVO">
		SELECT * FROM RESERVATION WHERE is_member = #{is_member}
	</select>
	

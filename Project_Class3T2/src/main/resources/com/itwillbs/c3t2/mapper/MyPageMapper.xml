	<!-- 회원상세정보 조회 -->
	<select id = "selectMemberDetails" resultType="com.itwillbs.c3t2.vo.MemberVO">
		SELECT*
		FROM MEMBER 
		WHERE member_id = #{member_id}
	</select>
	
	
	<!-- 특정 회원의 모든 리뷰를 조회 -->
